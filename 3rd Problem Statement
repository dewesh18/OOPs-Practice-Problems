//Write a program to check whether a given year is a leap year or not
#include<iostream>
using namespace std;

class Dewesh{
    public:
        void leap(){
            int s,d,t;
            cout << "Number of Test Cases: ";
            cin>>t;
            while (t--)
            {
                cout << "Enter the Year: "<< endl;
                cin >> d;

                s = d % 4;

                if (s == 0)
                {
                    cout << "The Year " << d << " is a leap year." << endl;
                }
                else
                {
                    cout << "The Year " << d << " is not a leap year." << endl;
                }
                
                
            }
            
        }
};

int main(){
    Dewesh obj;
    obj.leap();
    return 0;
}
